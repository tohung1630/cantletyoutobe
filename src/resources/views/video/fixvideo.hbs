<div class="mt-4">
    <h1>Sửa Video</h1>
    <form method="post" action="/video/update/{{video._id}}?_method=PUT">
        <div class="form-group">
            <label for="tenvideo">Tên Video</label>
            <input type="text" value="{{video.tenvideo}}" class="form-control"  name="tenvideo">
        </div>
        <div class="form-group">
            <label for="videoid">Video Id</label>
            <input type="text" value="{{video.videoid}}" class="form-control"  name="videoid">
        </div>
        <div class="form-group">
            <label for="motavideo">Mô Tả Video</label>
            <textarea  class="form-control" name="motavideo">{{video.motavideo}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Lưu Video</button>
    </form>
</div>