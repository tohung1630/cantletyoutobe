<div>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên Video</th>
            <th scope="col">Video Id</th>
            <th scope="col">Mô Tả Video</th>
            <th scope="col">Lượt Xem</th>
            <th scope="col">Like</th>
            <th scope="col" colspan="2">Dislike</th>
        </tr>
    </thead>
    <tbody>
        {{#each youtubechannels}}
            {{#each video}}
                <tr>
                    <th>{{sum @index 1}}</th>
                    <th>{{this.tenvideo}}</th>
                    <th>{{this.videoid}}</th>
                    <th>{{this.motavideo}}</th>
                    <th>{{this.luotxem}}</th>
                    <th>{{this.like}}</th>
                    <th>{{this.dislike}}</th>
                    <th>
                        <a href="/video/fix/{{@index}}" class="btn btn-link">Sửa</a>
                        <a href="" data-index="{{@index}}" data-toggle="modal" data-target="#exampleModal"  class="btn btn-link">Xóa</a>
                    </th>
                </tr>
            {{/each}}
        {{/each}}
    </tbody>

</table>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thông Báo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn thật sự muốn xóa
      </div>
      <div class="modal-footer">
        <button type="button" id="btnXoa" class="btn btn-primary">Đồng ý</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        
      </div>
    </div>
  </div>
</div>


<form method="post" name="form-delete"></form>

<script>
  document.addEventListener('DOMContentLoaded',function(){

    var index
    var deletForm = document.forms['form-delete']
    var btnXoa =document.getElementById('btnXoa')

    $('#exampleModal').on('show.bs.modal', function(event){
        var button = $(event.relatedTarget)
        index = button.data('index')
    })

    
    btnXoa.onclick = function(){
      deletForm.action = '/video/delete/'+index+'?_method=delete'
      deletForm.submit()
    }

  })
    
</script>